<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             xmlns:app="http://schemas.android.com/apk/res-auto"
                             xmlns:tools="http://schemas.android.com/tools"
                             android:layout_width="match_parent"
                             android:layout_height="100dp"
                             android:orientation="vertical">

    <android.widget.LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_commitHash"
                android:textSize="17sp" android:textColor="@android:color/background_dark" android:paddingLeft="10dp"
                android:paddingTop="5dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView_commitMessage"
                tools:layout_editor_absoluteY="43dp" android:paddingLeft="10dp" android:paddingTop="5dp"/>
    </android.widget.LinearLayout>
</android.widget.LinearLayout>